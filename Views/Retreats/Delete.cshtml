@model Retreat_Management_System.web.Data.Retreat

@{
    ViewData["Title"] = "Delete Retreat";
}

<h1>Delete Retreat</h1>

<div>
    <h4>Are you sure you want to delete this retreat?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Retreat Name</dt>
        <dd class="col-sm-10">@Model.RetreatName</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="RetreatID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>