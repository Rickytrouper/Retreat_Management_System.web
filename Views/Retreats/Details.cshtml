@model Retreat_Management_System.web.Data.Retreat

@{
    ViewData["Title"] = "Retreat Details";
}

<h1>Retreat Details</h1>

<div>
    <h4>@Model.RetreatName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate.ToShortDateString()</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-2">Capacity</dt>
        <dd class="col-sm-10">@Model.Capacity</dd>

        <dt class="col-sm-2">Contact Info</dt>
        <dd class="col-sm-10">@Model.ContactInfo</dd>
    </dl>
</div>

<div class="d-flex align-items-center">
    <a asp-action="Edit" asp-route-id="@Model.RetreatID" class="btn btn-primary btn-sm mr-2">Edit</a>
    <a asp-action="Index" class="btn btn-secondary btn-sm">Back to List</a>
</div>